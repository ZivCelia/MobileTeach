<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/title2"
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:background="#000" >
    	
        <TextView 
            android:id="@+id/title_text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="登录" />"
    	
    </RelativeLayout>
    
    
    
     <LinearLayout 
        android:id="@+id/tel2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">
        <TextView
            android:id="@+id/tel_text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:gravity="center"
            android:text="    手机号:"/>
        
        <EditText
            android:id="@+id/tel_edit2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:hint="请输入你的手机号码"/>"
	</LinearLayout>
	
     <LinearLayout 
        android:id="@+id/psw2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/tel2">
        <TextView
            android:id="@+id/psw_text12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:gravity="center"
            android:text="        密码:"/>
        
        <EditText
            android:id="@+id/psw_edit2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:hint="请输入你的密码"/>
	</LinearLayout>

     <CheckBox
         android:id="@+id/checkBox1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/psw2"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20dp"
         android:text="记住密码" />
     
     <Button 
         android:id="@+id/register"
         android:layout_width="250dp"
         android:layout_height="60dp"
         android:layout_below="@id/checkBox1"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20dp"
         android:background="#63B8FF"
         android:textColor="#fff"
         android:textSize="25dp"
         android:text="登录" />
     
     <TextView
         android:id="@+id/registered2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/register"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dp"
         android:textColor="#76EE00"
         android:text="前往注册" />"

</RelativeLayout>
