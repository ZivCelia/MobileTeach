<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <RelativeLayout
        android:id="@+id/title1"
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:background="#000" >
    	
        <TextView 
            android:id="@+id/title_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="注册" />
    	
    </RelativeLayout>
    

    <LinearLayout 
        android:id="@+id/tel1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/title1">
        <TextView
            android:id="@+id/tel_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:gravity="center"
            android:text="    手机号:"/>
        
        <EditText
            android:id="@+id/tel_edit1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:hint="请输入你的手机号码"/>"
	</LinearLayout>
    
    <LinearLayout 
        android:id="@+id/nikename1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/tel1">
        <TextView
            android:id="@+id/nikename_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:gravity="center"
            android:text="        昵称:"/>
        
        <EditText
            android:id="@+id/nikename_edit1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:hint="请输入你的昵称"/>
	</LinearLayout>
    
    <LinearLayout 
        android:id="@+id/psw1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/nikename1">
        <TextView
            android:id="@+id/psw_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:gravity="center"
            android:text="        密码:"/>
        
        <EditText
            android:id="@+id/psw_edit1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:hint="请输入你的密码"/>
	</LinearLayout>
    
    <LinearLayout 
        android:id="@+id/confirm_paw1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/psw1">
        <TextView
            android:id="@+id/confirm_psw_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:gravity="center"
            android:text="确认密码:"/>
        
        <EditText
            android:id="@+id/confirm_psw_edit1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:hint="再次确认你的密码"/>
	</LinearLayout>
    
    
    <Button 
        android:id="@+id/registered1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_alignParentBottom="true"
        android:text="立即注册"
        />
    
    
    
    

</RelativeLayout>